{
  "name": "ViewC",
  "description": "Crawl what you see",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_title": "cevt",
    "default_popup": "popup/popup.html"
  },
  "devtools_page": "devtools/initDevtools.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "proxy",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/contentjs.js"
      ],
      "run_at": "document_idle"
    }
  ]
}